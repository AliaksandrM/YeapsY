# Address where the site will be deployed
:site:                   http://example.com

# Defauly yeapsy contact address
# Errors/feedback etc. will be sent here
:contact:                contact@example.com

# Inform contact address when something happens in YeapsY
# i.e. New user has registered/deleted
:activity_watch:         true

# YeapsY will send emails FROM this address
:email_from:             yeapsy@example.com

# Default credentials for the first administrator
:username:               admin
:password:               admin
:email:                  admin@example.com

# Environment - development, production
:environment:            development

# Cookie secret
:secret:                 "aslajghetlkajsehtla;uiwehflkjabhef"

# Email configuration
:mail_via:               sendmail #smtp or sendmail

# SMTP configuration
:smtp_address:
:smtp_user_name:
:smtp_port:
:smtp_password:
:smtp_authentication:    login #login, plain...
:smtp_enable_starttls_auto: true


